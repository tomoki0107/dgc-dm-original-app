<div class="my-5">
  <%= form_with(url: search_cards_path, local: true, method: :get) do |form| %>
    <div class="search">
      <%= form.text_field :keyword, placeholder: "カードを検索する", class: "searchTerm" %>
      <%= form.submit "検索", class: "searchButton" %>
    </div>
  <% end %>
</div>

<table class="table table-bordered">
  <thead class="bg-secondary">
    <tr>
      <th class="text-light text-center" scope="col">カード名</th>
      <th class="text-light text-center" scope="col">文明</th>
      <th class="text-light text-center" scope="col">コスト</th>
      <th class="text-light text-center" scope="col">レア度</th>
    </tr>
  </thead>
  <tbody>
    <% cards.each do |card| %>
      <tr>
        <th class="text-center" scope="row">
        <%= link_to card_path(card) do %>
          <%= image_tag card.card_image, size: "40x55" %><br><%= card.name%></th>
        <% end %>
        <td class="text-center align-middle"><%= card.civilization %></td>
        <td class="text-center align-middle"><%= card.cost %></td>
        <td class="text-center align-middle"><%= card.rarity %></td>
      </tr>
    <% end %>
  </tbody>
</table>
