<div class="container-fluid py-4 mw-md">
  <h1>ユーザー編集</h1>

  <%= form_with(model: @user, local: true) do |f| %>

    <% if @user.errors.any? %>
      <div class="error-alert">
        <ul>
          <% @user.errors.full_messages.each do |message| %>
          <li class='error-message'><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>

    <div class="form-group">
      <%= f.label :username, "ユーザー名" %>
      <%= f.text_field :username, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :profile, "プロフィール" %>
      <%= f.text_area :profile, class: 'form-control', rows: "3"  %>
    </div>

    <div class="form-group mb-5">
      <%= f.label :profile_image, "プロフィール画像" %>
      <%= f.file_field :profile_image, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.submit "更新", class: 'btn btn-warning btn-block' %>
    </div>
  
  <% end %>
</div>