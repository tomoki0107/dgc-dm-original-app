<%= form_with(model: @user, local: true) do |f| %>

  <%= f.label :username, "ユーザー名" %>
  <%= f.text_field :username %>

  <%= f.label :email, "メールアドレス" %>
  <%= f.email_field :email %>

  <%= f.label :profile, "プロフィール" %>
  <%= f.text_area :profile %>

  <%= f.label :profile_image, "プロフィール画像" %>
  <%= f.file_field :profile_image %>

  <%= f.submit "更新" %>

<% end %>